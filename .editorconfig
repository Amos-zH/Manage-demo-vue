# 是否是顶级配置文件，设置为true的时候才会停止搜索.editorconfig文件
root = true

# 说明
## 设置文件编码为 UTF-8；
## 用四个空格代替制表符；
## 在保存时删除尾部的空白字符；
## 在文件结尾添加一个空白行；

[*.{js,jsx,ts,tsx,vue}]
# 文件编码格式：charset<"latin" | "utf-8" | "utf-8-bom" | "utf-16be" | "utf-16le">
charset = utf-8
# 缩进方式：indent_style<"tab" | "space">
indent_style = space
# 缩进大小：indent_size<number>
indent_size = 4
# 换行符类型：end_of_line<"lf" | "cr" | "crlf">
end_of_line = lf
# 是否删除行尾空格：trim_trailing_whitespace<boolean>
trim_trailing_whitespace = true
# 是否让文件以空行结束：insert_final_newline<boolean>
insert_final_newline = true
# 最大行宽：max_line_length<number>
max_line_length = 100

[*.md]
trim_trailing_whitespace = false